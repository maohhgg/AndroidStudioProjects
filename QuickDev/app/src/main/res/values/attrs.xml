<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="progress_unrech_color" format="color"/>
    <attr name="progress_rech_color" format="color"/>
    <attr name="progress_unrech_height" format="dimension"/>
    <attr name="progress_rech_height" format="dimension"/>
    <attr name="progress_text_color" format="color"/>
    <attr name="progress_text_size" format="dimension"/>
    <attr name="progress_text_offset" format="dimension"/>
    
    <attr name="visible_tab_count" format="integer"/>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_tab_count"/>
    </declare-styleable>

    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_unrech_color"/>
        <attr name="progress_rech_color"/>
        <attr name="progress_unrech_height"/>
        <attr name="progress_rech_height"/>
        <attr name="progress_text_color"/>
        <attr name="progress_text_size"/>
        <attr name="progress_text_offset"/>
    </declare-styleable>
    
    <declare-styleable name="RoundProgressBar">
        <attr name="radius" format="dimension"/>
    </declare-styleable>
</resources>